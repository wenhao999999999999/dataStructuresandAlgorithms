{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-Wextra",
                "-I", "${workspaceFolder}/include",                         // ✅ 指定头文件目录
                "${workspaceFolder}/src/main.cpp",                          // ✅ 主程序
                "${workspaceFolder}/src/binaryTree.cpp",                    // ✅ 类实现
